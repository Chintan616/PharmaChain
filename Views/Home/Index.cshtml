@{
    ViewData["Title"] = "PharmaChain - Pharmaceutical Supply Chain Management";
}

<div class="text-center">
    <h1 class="display-4">Welcome to PharmaChain</h1>
    <p class="lead">A comprehensive pharmaceutical supply chain management system</p>
    <hr class="my-4">
    
    <div class="mt-4">
        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary me-3">Login</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Register</a>
    </div>
    
    <div class="mt-5">
        <h3 class="mb-4">Core Features</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-users fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Role-Based User Management</h5>
                        <p class="card-text">Four distinct user roles with role-specific dashboards, permissions, and user approval system for seamless access control.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-pills fa-3x text-success mb-3"></i>
                        <h5 class="card-title">Medicine & Inventory Management</h5>
                        <p class="card-text">Complete medicine catalog with batch tracking, expiry dates, real-time inventory management, and low stock alerts.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-shopping-cart fa-3x text-info mb-3"></i>
                        <h5 class="card-title">Order Processing & Tracking</h5>
                        <p class="card-text">End-to-end order lifecycle from placement to delivery with real-time status tracking and order history management.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
