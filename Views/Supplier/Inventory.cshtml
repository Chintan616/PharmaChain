@model IEnumerable<PharmaChain.Models.Inventory>

@{
    ViewData["Title"] = "My Inventory";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Inventory</h1>
    <a asp-action="BuyFromManufacturer" class="btn btn-primary">Buy More Stock</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        @TempData.Remove("SuccessMessage")
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        @TempData.Remove("ErrorMessage")
    </div>
}


<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Medicine Name</th>
                <th>Batch No</th>
                <th>Expiry Date</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Last Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.IsLowStock ? (item.Quantity <= 2 ? "table-danger" : "table-warning") : "")">
                    <td>@item.Medicine?.Name</td>
                    <td>@item.Medicine?.BatchNo</td>
                    <td>@item.Medicine?.ExpiryDate.ToString("MM/dd/yyyy")</td>
                    <td>@item.Quantity</td>
                    <td>@item.Medicine?.Price.ToString("C")</td>
                    <td>@item.UpdatedAt.ToString("MM/dd/yyyy")</td>
                    <td>
                        
                        <!-- Delete form -->
                        <form asp-action="DeleteInventory" asp-route-id="@item.InventoryID" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this inventory item?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>