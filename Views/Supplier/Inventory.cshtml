@model IEnumerable<PharmaChain.Models.Inventory>

@{
    ViewData["Title"] = "My Inventory";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Inventory</h1>
    <a asp-action="BuyFromManufacturer" class="btn btn-primary">Buy More Stock</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Medicine Name</th>
                <th>Batch No</th>
                <th>Expiry Date</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Last Updated</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.IsLowStock ? (item.Quantity <= 2 ? "table-danger" : "table-warning") : "")">
                    <td>@item.Medicine?.Name</td>
                    <td>@item.Medicine?.BatchNo</td>
                    <td>@item.Medicine?.ExpiryDate.ToString("MM/dd/yyyy")</td>
                    <td>
                        <span class="badge bg-@(item.IsLowStock ? (item.Quantity <= 2 ? "danger" : "warning") : "success")">
                            @item.Quantity units
                        </span>
                        @if (item.IsLowStock)
                        {
                            <i class="fas fa-exclamation-triangle text-@(item.Quantity <= 2 ? "danger" : "warning") ms-1"></i>
                        }
                    </td>
                    <td>@item.Medicine?.Price.ToString("C")</td>
                    <td>@item.UpdatedAt.ToString("MM/dd/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
