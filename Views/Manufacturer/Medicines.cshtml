@model IEnumerable<PharmaChain.Models.Medicine>

@{
    ViewData["Title"] = "Medicines";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Medicines</h1>
    <a asp-action="CreateMedicine" class="btn btn-primary">Add New Medicine</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Batch No</th>
                <th>Expiry Date</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medicine in Model)
            {
                <tr class="@(medicine.IsLowStock ? (medicine.Quantity <= 5 ? "table-danger" : "table-warning") : "")">
                    <td>@medicine.Name</td>
                    <td>@medicine.BatchNo</td>
                    <td>@medicine.ExpiryDate.ToString("MM/dd/yyyy")</td>
                    <td>
                        <span class="badge bg-@(medicine.IsLowStock ? (medicine.Quantity <= 5 ? "danger" : "warning") : "success")">
                            @medicine.Quantity units
                        </span>
                        @if (medicine.IsLowStock)
                        {
                            <i class="fas fa-exclamation-triangle text-@(medicine.Quantity <= 5 ? "danger" : "warning") ms-1"></i>
                        }
                    </td>
                    <td>@medicine.Price.ToString("C")</td>
                    <td>@medicine.CreatedAt.ToString("MM/dd/yyyy")</td>
                    <td>
                        <a asp-action="EditMedicine" asp-route-id="@medicine.MedicineID" class="btn btn-sm btn-outline-primary">Edit</a>
                        <form asp-action="DeleteMedicine" asp-route-id="@medicine.MedicineID" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this medicine?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
