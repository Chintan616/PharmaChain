@model PharmaChain.ViewModels.ManufacturerDashboardViewModel

@{
    ViewData["Title"] = "Manufacturer Dashboard";
}

<div class="row">
    <div class="col-12">
        <h1 class="mb-4">Manufacturer Dashboard</h1>
    </div>
</div>

<div class="row mb-4">
    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 mb-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5 class="card-title">Total Medicines</h5>
                <h2>@Model.TotalMedicines</h2>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 mb-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5 class="card-title">Total Orders</h5>
                <h2>@Model.TotalOrders</h2>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 mb-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h5 class="card-title">Pending Approvals</h5>
                <h2>@Model.PendingApprovals</h2>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 mb-3">
        <div class="card @(Model.LowStockMedicines > 0 ? "bg-danger" : "bg-secondary") text-white">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-exclamation-triangle"></i> Low Stock Items
                </h5>
                <h2>@Model.LowStockMedicines</h2>
                @if (Model.LowStockMedicines > 0)
                {
                    <small>Items with ≤ @PharmaChain.Models.Medicine.LOW_STOCK_THRESHOLD units</small>
                }
            </div>
        </div>
    </div>
</div>

<!-- Low Stock Alert -->
@if (Model.LowStockMedicines > 0)
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <h4 class="alert-heading">
                    <i class="fas fa-exclamation-triangle"></i> Low Stock Alert!
                </h4>
                <p class="mb-0">
                    You have <strong>@Model.LowStockMedicines</strong> medicine(s) with low stock (≤ @PharmaChain.Models.Medicine.LOW_STOCK_THRESHOLD units).
                    Please restock these items to avoid stockouts.
                </p>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
}


<!-- Low Stock Items Table -->
@if (Model.LowStockItems.Any())
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Low Stock Items
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Medicine Name</th>
                                    <th>Batch No</th>
                                    <th>Current Stock</th>
                                    <th>Price</th>
                                    <th>Expiry Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.LowStockItems)
                                {
                                    <tr class="@(item.Quantity <= 5 ? "table-danger" : "table-warning")">
                                        <td>@item.Name</td>
                                        <td>@item.BatchNo</td>
                                        <td>
                                            <span class="badge bg-@(item.Quantity <= 5 ? "danger" : "warning")">
                                                @item.Quantity units
                                            </span>
                                        </td>
                                        <td>@item.Price.ToString("C")</td>
                                        <td>@item.ExpiryDate.ToString("MM/dd/yyyy")</td>
                                        <td>
                                            @if (item.Quantity <= 5)
                                            {
                                                <span class="badge bg-danger">Critical</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Low</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5>Recent Orders</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentOrders.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Medicine</th>
                                    <th>Quantity</th>
                                    <th>Total Amount</th>
                                    <th>Status</th>
                                    <th>Order Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td>@order.OrderID</td>
                                        <td>@order.Customer?.DisplayName</td>
                                        <td>@order.Medicine?.Name</td>
                                        <td>@order.Quantity</td>
                                        <td>@order.TotalAmount.ToString("C")</td>
                                        <td>
                                            <span class="badge bg-@(order.Status switch {
                                                OrderStatus.Pending => "warning",
                                                OrderStatus.Approved => "info",
                                                OrderStatus.Delivered => "success",
                                                OrderStatus.Rejected => "danger",
                                                _ => "secondary"
                                            })">
                                                @order.Status
                                            </span>
                                        </td>
                                        <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No recent orders found.</p>
                }
            </div>
        </div>
    </div>
</div>
