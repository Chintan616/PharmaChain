@model IEnumerable<PharmaChain.Models.Order>
@{
    ViewData["Title"] = "Order Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="fas fa-shopping-cart"></i> Order Management
            </h1>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Orders</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="ordersTable">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Medicine</th>
                            <th>Quantity</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Order Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.OrderID</td>
                                <td>@order.Customer?.DisplayName</td>
                                <td>@order.Medicine?.Name</td>
                                <td>@order.Quantity</td>
                                <td>@order.TotalAmount.ToString("C")</td>
                                <td>
                                    <span class="badge bg-@(order.Status switch {
                                        OrderStatus.Delivered => "success",
                                        OrderStatus.Pending => "warning",
                                        OrderStatus.Rejected => "danger",
                                        OrderStatus.Approved => "info",
                                        _ => "secondary"
                                    })">@order.Status</span>
                                </td>
                                <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-primary dropdown-toggle" type="button" 
                                                    data-bs-toggle="dropdown" aria-expanded="false">
                                                Update Status
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <form asp-action="UpdateOrderStatus" method="post" class="d-inline">
                                                        <input type="hidden" name="orderId" value="@order.OrderID" />
                                                        <input type="hidden" name="status" value="@OrderStatus.Pending" />
                                                        <button type="submit" class="dropdown-item">Set to Pending</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-action="UpdateOrderStatus" method="post" class="d-inline">
                                                        <input type="hidden" name="orderId" value="@order.OrderID" />
                                                        <input type="hidden" name="status" value="@OrderStatus.Approved" />
                                                        <button type="submit" class="dropdown-item">Set to Approved</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-action="UpdateOrderStatus" method="post" class="d-inline">
                                                        <input type="hidden" name="orderId" value="@order.OrderID" />
                                                        <input type="hidden" name="status" value="@OrderStatus.Delivered" />
                                                        <button type="submit" class="dropdown-item">Set to Delivered</button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-action="UpdateOrderStatus" method="post" class="d-inline">
                                                        <input type="hidden" name="orderId" value="@order.OrderID" />
                                                        <input type="hidden" name="status" value="@OrderStatus.Rejected" />
                                                        <button type="submit" class="dropdown-item">Set to Rejected</button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#ordersTable').DataTable({
                "pageLength": 25,
                "order": [[ 6, "desc" ]]
            });
        });
    </script>
}
