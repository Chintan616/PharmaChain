@model IEnumerable<PharmaChain.Models.Medicine>
@{
    ViewData["Title"] = "Medicine Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="fas fa-pills"></i> Medicine Management
            </h1>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Medicines</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="medicinesTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Batch No</th>
                            <th>Manufacturer</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Expiry Date</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var medicine in Model)
                        {
                            <tr>
                                <td>@medicine.Name</td>
                                <td>@medicine.BatchNo</td>
                                <td>@medicine.Manufacturer?.DisplayName</td>
                                <td>@medicine.Price.ToString("C")</td>
                                <td>@medicine.Quantity</td>
                                <td>@medicine.ExpiryDate.ToString("MMM dd, yyyy")</td>
                                <td>@medicine.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <form asp-action="DeleteMedicine" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@medicine.MedicineID" />
                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Are you sure you want to delete this medicine? This action cannot be undone.')">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#medicinesTable').DataTable({
                "pageLength": 25,
                "order": [[ 6, "desc" ]]
            });
        });
    </script>
}
