                                                    @if (!user.IsApproved)
                                                    {
                                                        <form asp-action="ApproveUser" method="post" class="d-inline">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" class="btn btn-success" onclick="return confirm('Approve this user?')">Approve</button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <form asp-action="RejectUser" method="post" class="d-inline">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" class="btn btn-warning" onclick="return confirm('Reject this user?')">Reject</button>
                                                        </form>
                                                    }
                                                    <form asp-action="DeleteUser" method="post" class="d-inline">
                                                        <input type="hidden" name="userId" value="@user.Id" />
                                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this user?')">Delete</button>
                                                    </form>
                                                </div>
                                            }
                                            else { <span class="text-muted">-</span> }
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    }
                    else { <span class="text-muted">No suppliers found.</span> }
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-warning">Customers</h6>
                </div>
                <div class="card-body">
                    @if (customers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var user in customers)
                                {
                                    <tr>
                                        <td>@(user.Name ?? user.DisplayName)</td>
                                        <td>@user.Email</td>
                                        <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (currentUser?.Id != user.Id)
                                            {
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                                                    @if (!user.IsApproved)
                                                    {
                                                        <form asp-action="ApproveUser" method="post" class="d-inline">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" class="btn btn-success" onclick="return confirm('Approve this user?')">Approve</button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <form asp-action="RejectUser" method="post" class="d-inline">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" class="btn btn-warning" onclick="return confirm('Reject this user?')">Reject</button>
                                                        </form>
                                                    }
                                                    <form asp-action="DeleteUser" method="post" class="d-inline">
                                                        <input type="hidden" name="userId" value="@user.Id" />
                                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this user?')">Delete</button>
                                                    </form>
                                                </div>
                                            }
                                            else { <span class="text-muted">-</span> }
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    }
                    else { <span class="text-muted">No customers found.</span> }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable({
                "pageLength": 25,
                "order": [[ 3, "desc" ]]
            });
        });
    </script>
}
