@model IEnumerable<PharmaChain.Models.ApplicationUser>
@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="fas fa-users"></i> User Management
            </h1>
        </div>
    </div>

    @{ 
        var manufacturers = Model.Where(u => u.Role == "Manufacturer").OrderBy(u => u.CompanyName ?? u.Name);
        var suppliers = Model.Where(u => u.Role == "Supplier").OrderBy(u => u.CompanyName ?? u.Name);
        var customers = Model.Where(u => u.Role == "Customer").OrderBy(u => u.Name ?? u.CompanyName);
        var currentUser = await UserManager.GetUserAsync(User);
    }

    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">Manufacturers</h6>
                </div>
                <div class="card-body">
                    @if (manufacturers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>Company</th>
                                        <th>Email</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var user in manufacturers)
                                {
                                    <tr>
                                        <td>@(user.CompanyName ?? user.DisplayName)</td>
                                        <td>@user.Email</td>
                                        <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (currentUser?.Id != user.Id)
                                            {
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                                                    @if (!user.IsApproved)
                                                    {
                                                        <form asp-action="ApproveUser" method="post" class="d-inline">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" class="btn btn-success" onclick="return confirm('Approve this user?')">Approve</button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <form asp-action="RejectUser" method="post" class="d-inline">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" class="btn btn-warning" onclick="return confirm('Reject this user?')">Reject</button>
                                                        </form>
                                                    }
                                                    <form asp-action="DeleteUser" method="post" class="d-inline">
                                                        <input type="hidden" name="userId" value="@user.Id" />
                                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this user?')">Delete</button>
                                                    </form>
                                                </div>
                                            }
                                            else { <span class="text-muted">-</span> }
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    }
                    else { <span class="text-muted">No manufacturers found.</span> }
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">Suppliers</h6>
                </div>
                <div class="card-body">
                    @if (suppliers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>Company</th>
                                        <th>Email</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var user in suppliers)
