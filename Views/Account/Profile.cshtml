@model PharmaChain.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0">
                    <i class="fas fa-user"></i> Profile Information
                </h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <p class="form-control-plaintext">@Model.Name</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <p class="form-control-plaintext">@Model.Email</p>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label fw-bold"></label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-@(Model.Role switch {
                                    "Manufacturer" => "primary",
                                    "Supplier" => "success",
                                    "Customer" => "info",
                                    _ => "secondary"
                                })">
                                    @Model.Role
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="IsApproved" class="form-label fw-bold"></label>
                            <p class="form-control-plaintext">
                                @if (Model.IsApproved)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle"></i> Approved
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-clock"></i> Pending Approval
                                    </span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CreatedAt" class="form-label fw-bold"></label>
                            <p class="form-control-plaintext">@Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex gap-2">
                    <a asp-action="EditProfile" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit Profile
                    </a>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                        <i class="fas fa-home"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
