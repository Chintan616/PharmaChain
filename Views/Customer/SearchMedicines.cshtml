@model PharmaChain.ViewModels.SearchMedicinesViewModel

@{
    ViewData["Title"] = "Search Medicines";
}

<div class="row mb-4">
    <div class="col-12">
        <h1>Search Medicines from Suppliers</h1>
        <p class="text-muted">Browse medicines available from suppliers and place orders</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <form asp-action="SearchMedicines" method="get">
            <div class="input-group">
                <input asp-for="SearchTerm" class="form-control" placeholder="Search by medicine name or batch number..." />
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
</div>

@if (Model.Results.Any())
{
    <div class="row">
        @foreach (var item in Model.Results)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Medicine?.Name</h5>
                        <p class="card-text">
                            <strong>Batch No:</strong> @item.Medicine?.BatchNo<br>
                            <strong>Expiry Date:</strong> @(item.Medicine != null ? item.Medicine.ExpiryDate.ToString("MM/dd/yyyy") : "")<br>
                            <strong>Price:</strong> @(item.Medicine != null ? item.Medicine.Price.ToString("C") : "")<br>
                            <strong>Manufacturer:</strong> @item.Medicine?.Manufacturer?.CompanyName<br>
                            <strong>Suppliers:</strong>
                            @if (item.SupplierNames != null && item.SupplierNames.Any())
                            {
                                <span>@string.Join(", ", item.SupplierNames)</span>
                            }
                            else
                            {
                                <span class="text-muted">No supplier listed</span>
                            }
                        </p>
                        <form asp-action="PlaceOrder" method="post" class="d-inline">
                            <input type="hidden" name="medicineId" value="@(item.Medicine != null ? item.Medicine.MedicineID : 0)" />
                            <div class="input-group mb-2">
                                <input type="number" name="quantity" class="form-control" min="1" value="1" placeholder="Quantity" />
                                <button type="submit" class="btn btn-primary">Place Order</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No medicines found</h4>
        <p>Try adjusting your search criteria or check back later for new medicines.</p>
    </div>
}